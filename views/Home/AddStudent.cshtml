@model List<smSystem.Models.School>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Student - School Management System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes success {
            0% {
                opacity: 0;
                transform: scale(0.8);
            }

            50% {
                opacity: 1;
                transform: scale(1.1);
            }

            100% {
                opacity: 1;
                transform: scale(1);
            }
        }

        .fade-in {
            animation: fadeIn 0.6s ease-out;
        }

        .slide-in {
            animation: slideIn 0.4s ease-out;
        }

        .success-animation {
            animation: success 0.5s ease-out;
        }
    </style>
</head>

<body class=" text-black relative min-h-screen overflow-hidden">
    <div class="absolute inset-0 bg-cover bg-center opacity-20 blur-sm z-0"
        style="background-image: url('/images/bck.jpg');"></div>
    <div class="relative z-10">
        <nav class="bg-black text-white shadow-lg">
            <div class="max-w-6xl mx-auto px-4">
                <div class="flex justify-between items-center py-4">
                    <div class="text-xl font-bold">School Management System</div>
                    <div class="flex space-x-6">
                        <a href="/Home" class="hover:text-gray-300 transition-colors duration-200 ">Home</a>
                        <a href="/Home/AddSchool" class="hover:text-gray-300 transition-colors duration-200">Add
                            School</a>
                        <a href="/Home/AddStudent"
                            class="hover:text-gray-300 transition-colors duration-200 font-medium border-b-2 border-white">Add
                            Student</a>
                        <a href="/Home/ViewData" class="hover:text-gray-300 transition-colors duration-200">View
                            Data</a>
                    </div>
                </div>
            </div>
        </nav>

        <main class="max-w-2xl mx-auto px-4 py-12">
            <div class="fade-in">
                <h1 class="text-4xl font-bold mb-8 text-center">Add New Student</h1>


                @if (Model.Count() == 0)
                {
                    <div id="noSchoolsWarning"
                        class=" bg-yellow-50 border-2 border-yellow-200 rounded-lg p-4 mb-6 text-center">
                        <div class="text-yellow-800 font-medium">⚠️ No schools found. Please <a href="/Home/AddSchool"
                                class="underline">add a school</a> first.</div>
                    </div>
                }


                <form id="studentForm" asp-action="AddStudent" method="post"
                    class="bg-white border-2 border-gray-200 rounded-lg p-8 shadow-lg">
                    <div class="space-y-6">
                        <div class="slide-in">
                            <label for="studentName" class="block text-sm font-medium text-gray-700 mb-2">
                                Student Name *
                            </label>
                            <input type="text" id="studentName" name="Name" required
                                class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-black focus:outline-none transition-colors duration-200"
                                placeholder="Enter student full name">
                        </div>

                        <div class="slide-in" style="animation-delay: 0.1s;">
                            <label for="studentClass" class="block text-sm font-medium text-gray-700 mb-2">
                                Class *
                            </label>
                            <select id="studentClass" name="Class" required
                                class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-black focus:outline-none transition-colors duration-200">
                                <option value="">Select Class</option>
                                <option value="Kindergarten">Kindergarten</option>
                                <option value="Grade 1">Grade 1</option>
                                <option value="Grade 2">Grade 2</option>
                                <option value="Grade 3">Grade 3</option>
                                <option value="Grade 4">Grade 4</option>
                                <option value="Grade 5">Grade 5</option>
                                <option value="Grade 6">Grade 6</option>
                                <option value="Grade 7">Grade 7</option>
                                <option value="Grade 8">Grade 8</option>
                                <option value="Grade 9">Grade 9</option>
                                <option value="Grade 10">Grade 10</option>
                                <option value="Grade 11">Grade 11</option>
                                <option value="Grade 12">Grade 12</option>
                            </select>
                        </div>

                        <div class="slide-in" style="animation-delay: 0.2s;">
                            <label for="schoolId" class="block text-sm font-medium text-gray-700 mb-2">
                                School *
                            </label>
                            <select id="schoolId" name="SchoolId" required
                                class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-black focus:outline-none transition-colors duration-200">
                                @foreach (var school in Model)
                                {
                                    <option value="@school.SchoolId">@school.Name</option>
                                }
                            </select>
                            <p class="text-sm text-gray-500 mt-1">Choose the school where the student will be enrolled
                            </p>
                        </div>

                        <!-- Submit Button -->
                        <div class="slide-in" style="animation-delay: 0.3s;">
                            <button type="submit" id="submitBtn"
                                class="w-full bg-black text-white py-3 px-6 rounded-lg hover:bg-gray-800 transition-colors duration-200 font-medium text-lg">
                                Add Student
                            </button>
                        </div>
                    </div>
                </form>


                <div class="mt-8 text-center space-x-4">
                    <a href="/Home/AddSchool"
                        class="text-black hover:text-gray-600 transition-colors duration-200 underline">
                        ← Add School First
                    </a>
                    <a href="/Home/ViewData"
                        class="text-black hover:text-gray-600 transition-colors duration-200 underline">
                        View All Data
                    </a>
                </div>
            </div>
        </main>

        <footer class="bg-black text-white py-8 mt-20">
            <div class="max-w-6xl mx-auto px-4 text-center">
                <p>&copy; Samadrit das</p>
            </div>
        </footer>

    </div>
</body>

</html>